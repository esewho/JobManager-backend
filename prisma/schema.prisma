generator client {
  provider = "prisma-client-js"


}

datasource db {
  provider = "postgresql"
  
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  EMPLOYEE
}

  enum WorkSessionStatus {
  OPEN
  CLOSED
  }

  enum WorkShift {
    MIDDAY
    NIGHT
  }

model User {
  id String @id @default(cuid())
  username String @unique
  password String
  active Boolean @default(true)
  role Role @default(EMPLOYEE)
  session WorkSession[]
  tips TipDistribution[]
  workspaces UserWorkspace[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workspace{
  id String @id @default(cuid())
  name String
  users UserWorkspace[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserWorkspace{
  id String @id @default(cuid())
  userId String
  workspaceId String
  role Role @default(EMPLOYEE)
  user User @relation(fields: [userId], references: [id])
  workspace Workspace @relation(fields: [workspaceId], references: [id])
  createdAt DateTime @default(now())
  @@unique([userId, workspaceId])
}

model WorkSession{
  id String @id @default(cuid())
  userId String
  date DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  status WorkSessionStatus @default(OPEN)
  checkIn DateTime @default(now())
  checkOut DateTime?
  shift WorkShift?
  totalMinutes Int @default(0)
  extraMinutes Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([userId, date])
}

model TipPool{
  id String @id @default(cuid())
  totalAmount Int
  date DateTime 
  shift WorkShift
  distributions TipDistribution[]
  createdAt DateTime @default(now())

@@unique([date, shift])

}

model TipDistribution{
  id String @id @default(cuid())
  userId String
  tipPoolId String
  user User @relation(fields: [userId], references: [id])
  tipPool TipPool @relation(fields: [tipPoolId], references: [id])
  amount Int
  createdAt DateTime @default(now())
  @@unique([userId, tipPoolId])
}
