generator client {
  provider = "prisma-client-js"


}

datasource db {
  provider = "postgresql"
  
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

  enum WorkSessionStatus {
  OPEN
  CLOSED
  }

model User {
  id String @id @default(cuid())
  username String @unique
  password String
  role Role @default(EMPLOYEE)
  session WorkSession[]
  tips TipDistribution[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkSession{
  id String @id @default(cuid())
  userId String
  date DateTime
  user User @relation(fields: [userId], references: [id])
  status WorkSessionStatus @default(OPEN)
  checkIn DateTime @default(now())
  checkOut DateTime?
  totalMinutes Int @default(0)
  extraMinutes Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([userId, date])
}

model TipPool{
  id String @id @default(cuid())
  totalAmount Float
  workersCount Int
  amountPerWorker Float
  date DateTime @unique
  distributions TipDistribution[]
  createdAt DateTime @default(now())
}

model TipDistribution{
  id String @id @default(cuid())
  userId String
  tipPoolId String
  user User @relation(fields: [userId], references: [id])
  tipPool TipPool @relation(fields: [tipPoolId], references: [id])
  amount Decimal @db.Decimal(10, 2)
  createdAt DateTime @default(now())
}
